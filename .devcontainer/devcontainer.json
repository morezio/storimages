{
    "name": "storimages",
    "runArgs": [
        "--name=storimages",
        "--platform=linux/amd64"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode-remote.remote-containers",
                "ms-vscode-remote.remote-ssh",
                "ms-vscode.remote-explorer",
                "ms-azuretools.vscode-docker",
                "ms-python.vscode-pylance",
                "ms-python.python",
                "ms-python.black-formatter"
            ]
        }
    },
    "image": "morezio/envs:u_dev_ci",
    "workspaceMount": "source=${localWorkspaceFolder},target=/storimages,type=bind",
    "workspaceFolder": "/storimages",
    "postStartCommand": "zsh",
    "mounts": [
        "source=${env:HOME}/.ssh,target=/root/.ssh,type=bind",
        "source=${env:HOME}/.gitconfig,target=/root/.gitconfig,type=bind",
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ]
}